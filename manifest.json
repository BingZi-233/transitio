{
    "manifest_version": 3,
    "type": "theme",
    "name": "Transitio",
    "slug": "transitio",
    "description": "自定义 CSS 片段加载器",
    "version": "0.2.6",
    "thumbnail": "./icon.png",
    "author": {
        "name": "PRO-2684",
        "link": "https://github.com/PRO-2684"
    },
    "repository": {
        "repo": "PRO-2684/transitio",
        "branch": "main",
        "use_release": {
            "tag": "latest",
            "name": "transitio-release.zip"
        }
    },
    "platform": [
        "win32",
        "linux",
        "darwin"
    ],
    "injects": {
        "renderer": "./renderer.js",
        "main": "./main.js",
        "preload": "./preload.js"
    }
}